- model_class = User.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:username)
      %th= model_class.human_attribute_name(:nickname)
      %th= model_class.human_attribute_name(:billing_address)
      %th= model_class.human_attribute_name(:countrty)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => "Actions"
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.username, user.url
        %td= user.nickname
        %td= user.billing_address
        %td= user.country
        %td= user.city
        %td= user.created_at
        %td
          = link_to t('.destroy', :default => "Destroy"), "/users/destroy?id=#{current_user.id}", :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'
